#user-signin
  %h2 Sign in
  = form_for(resource, :as => resource_name, :url => session_path(resource_name), :validate => true) do |f|
    %dl.dl-horizontal
      %dt= f.label :email
      %dd= f.email_field :email, :autofocus => true, :validate => { :uniqueness => false }
      %dt= f.label :password
      %dd= f.password_field :password, :validate => { :presence => true, :confirmation => false }
      - if devise_mapping.rememberable?
        %dt= f.label :remember_me
        %dd= f.check_box :remember_me
    %div= f.submit "Sign in", class: 'btn btn-primary', id: 'user-signin'
